<%= form_with model:@contact do |f|%>
<div class="contact-form">

  <div class="form-box">
    <div class= "contact-label">◆お名前</div>
    <%= f.text_field :name , class:"contact-input"%>
  </div>

  <div class="form-box">
    <div class= "contact-label">◆メール</div>
    <%= f.text_field :email , class:"contact-input"%>
  </div>

  <div class="form-box">
    <div class= "contact-label">◆電話番号</div>
    <%= f.text_field :phone_number , class:"contact-input"%>
  </div>

  <div class="form-box">
    <div class="contact-label">◆お問い合わせ内容</div>
    <%= f.text_area :message, class:"contact-message" %>
  </div>

  <div>
  <%= f.submit "送信", class:"button"%>
  </div>

</div>
<% end %>