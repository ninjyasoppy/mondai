<div class = "main">

  <div class="left">
  left
  </div>

  <div class="center">
  
    <%= form_with model:@contact do |f|%>
    <div class="contact-form">
      <div class="form-name">
        <div class= "contact-label">◆お名前</div>
        <%= f.text_field :name , class:"contact-name"%>
      </div>
      <div class="form-message">
        <div class="contact-label">◆お問い合わせ内容</div>
        <%= f.text_area :message, class:"contact-message" %>
      </div>
      <%= f.submit "送信", class:"button"%>
    </div>
    <% end %>

  </div>

  <div class="right">
  right
  </div>

</div>