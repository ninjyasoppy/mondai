<div class = "main">

  <div class="left">
  left
  </div>

  <div class="center">
    <div class = "contents">
      <% @tweets.each do |tweet| %>
        <div class = "content">
          <%= link_to tweet_path(tweet) do %>
            <div>
              <%= image_tag tweet.image, class: "index-image" if tweet.image.attached? %>
              <p><%= tweet.text %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="right">
  right
  </div>

</div>