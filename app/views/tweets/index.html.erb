<div class = "main">

  <div class="left">
  left
  </div>

  <div class="center">
    <div class ="logo-image">

    </div>
     <%= image_tag "gazo2.jpg", class:"list-pict" %>
    <div>

      <%if user_signed_in? && current_user.admin %>
        <%= link_to new_tweet_path, class:"text-decoration-none" do %>
          <p>作成する</p>
        <% end %>
      <% end %> 
      <div class = "contents">
        <% @tweets.each do |tweet| %>

          <div class = "content">
            <%= link_to tweet_path(tweet), class:"text-decoration-none" do %>
              <div class= "content-detail">
                <%= image_tag tweet.image, class: "index-image" if tweet.image.attached? %>
                <div class="index-car-name"><%= tweet.car_name %></div>
                <div class="index-price">価格<span class = "price30"><%= tweet.price %></span>万円</div>
              </div>
            <% end %>
          </div>

        <% end %>
      </div>
    </div>

  </div>

  <div class="right">
  right
  </div>

</div>