

<%# 販売車両 %>
<div class = "cars">

  <% @tweets.each do |tweet| %>
  <div class = "car">

    <%= link_to tweet_path(tweet), class:"text-decoration-none" do %>
      <div class= "car-detail">
        <%= image_tag tweet.image, class: "car-image" if tweet.image.attached? %>
        <div class="car-name"><%= tweet.car_name %></div>
        <div class="car-price">価格<span class = "price30"><%= tweet.price %></span>万円</div>
      </div>
    <% end %>

  </div>
  <% end %>

</div>
<%# //販売車両 %>